<div class="container-full">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="portlet light bordered form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject font-blue-hoki bold uppercase">We love human contact!</span>
                        <span class="caption-helper">What can we help you with?</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="https://formspree.io/cronasaservice@gmail.com" method="post" class="form-horizontal form-bordered">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">Your Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="InputName" id="InputName" placeholder="John Smith" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Your Email</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="_replyTo" id="InputName" placeholder="john@smith.com" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Message</label>
                                <div class="col-md-9">
                                    <textarea name="InputMessage" id="InputMessage" class="form-control" rows="5" required placeholder="Is something confusing you about the service? We will get back to you within 24 hours."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green pull-right">
                                        <i class="fa fa-check"></i> Send</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>